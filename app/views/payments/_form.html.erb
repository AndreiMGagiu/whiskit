<div class="container">
  <div class="positioning">
    <div class="form-style">
      <h1>One more step... <%= @order.meal_sku %></h1>
      <!-- <h4>Confirm your order details & pay</h4> -->

          <div class="gif">
            <img src="https://cdn.dribbble.com/users/107759/screenshots/3759297/salad.gif" alt="">
          </div>
      <%= form_tag order_payments_path(@order) do %>
        <article>
          <label class="amount">
            <span>Amount: <strong><%= humanized_money_with_symbol(@order.amount) %></strong> </span>
          </label>
        </article> <br> <br>


        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-name="Your meal"
          data-email="<%= current_user.email %>"
          data-description="Meal <%= @order.meal_sku %>"
          data-amount="<%= @order.amount_cents %>"
          data-currency="<%= @order.amount.currency %>"></script>

      <% end %>

  <!--  </div -->
  </div>
</div>
