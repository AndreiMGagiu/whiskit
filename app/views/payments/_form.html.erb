<div class="container">
  <div class="positioning">
    <div class="form-style">
      <h3 style="padding-top: 10px; padding-bottom: 20px;"> You are about to order...</h3>
      <h2>
        <%= @order.meal.name %> x <%= (@order.amount / @order.meal.price).to_i  %>
      </h2>

      <%= form_tag order_payments_path(@order) do %>

        <article>
          <label class="amount" style="padding-top: 18px;">
            <span><h3>Amount to pay:      <%= humanized_money_with_symbol(@order.amount)%></h3></span>
          </label>
        </article>



        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-name="Your meal"
          data-email="<%= current_user.email %>"
          data-description="Meal <%= @order.meal_sku %>"
          data-amount="<%= @order.amount_cents %>"
          data-currency="<%= @order.amount.currency %>"></script>

      <% end %>



      <div class="gif">
            <img src="https://cdn.dribbble.com/users/107759/screenshots/3759297/salad.gif" alt="">
          </div>

  <!--  </div -->
  </div>
</div>
</div>

