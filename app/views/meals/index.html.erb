<div class="searchbarindex" style="
 flex-grow: 0;
 background-color: white;
 display: flex;
 justify-content: space-between;
 align-items: center;
 position: sticky;
 z-index: 2;
 top: 70px;
 ">
  <div class="leftdiv" style="padding-left: 16px;">
    <h3>
      <div>
        <%= form_tag meals_path, method: :get do %>
        <button class="search-button" type="submit">
          <i class="fa fa-search"></i>
        </button>
        <!-- Search bar -->
        <%= text_field_tag :query,
        '',
        placeholder: "Find food near you?", class: "index-search" %>

        <% end %>
        <!-- Search bar -->
      </div>
    </h3>
  </div>

  <div class="rightdiv" style="padding-right: 16px;">
    <h3>Filter</h3>

    <%= form_tag meals_path, method: :get do%>
      <% @diets.each do |dietary_requirement| %>
          <!-- <li> -->
            <%= check_box_tag 'dietary_requirement_ids[]', dietary_requirement.id -%>
            <%= h dietary_requirement.categories -%>
          <!-- </li> -->
      <% end %>
      <%= submit_tag "Search", class: "fa-search"%>
    <% end %>

    <!-- create a form s bit like search form but instead of textfield have checkboxes. have a filter
    button to click on whenever you check the boxes you want. When filter button (submit) is clicked you send the params to the index method of meals. Inside there you check if the params is present. if it is you retrieve the meals that meat the filter stuff by querying the database -->
  </div>
</div>

