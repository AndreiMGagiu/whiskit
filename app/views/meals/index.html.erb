<div class="searchbarindex" style="
 flex-grow: 0;
 background-color: white;
 display: flex;
 justify-content: space-between;
 align-items: center;
 position: sticky;
 z-index: 2;
 top: 70px;

 ">
  <div class="leftdiv" style="padding-left: 16px;">
    <h3>
      <div>
        <%= form_tag meals_path, method: :get do %>
        <button class="search-button" type="submit">
          <i class="fa fa-search"></i>
        </button>
        <!-- Search bar -->
        <%= text_field_tag :query,
        '',
        placeholder: "Find food near you?", class: "index-search" %>

        <% end %>
        <!-- Search bar -->
      </div>
    </h3>
  </div>

  <div class="rightdiv" style="padding-right: 16px;">
    <h3>filter here on this side </h3>
  </div>
</div>

<div class="container1" style="padding-top: 0px !important;">

  <div style="width: 70%; padding: 16px; padding-bottom: 16px;">
    <div class="row">
      <% @meals.each do |meal| %>
        <div class="col-xs-6">
          <div class="meal-cards1" style="background-image: url('<%= asset_url 'lasange.jpg' %>'); margin: 10px;">
            <div class="avatar-meal-card">
                <%= image_tag 'jack.png', class: 'avatar'  %>
                <h3>4.7</h3>
            </div>
            <div class="card-bottom">
              <%= link_to meal_path(meal) do %>
                <div class="name-of-food">
                  <h1><%= meal.name %></h1>
                </div>
              <% end %>
              <div class="card-info">
                <div class="time-counter">
                  <i class="far fa-clock"></i>
                  <h3><%= meal.pick_up_start %> - <%=meal.pick_up_end%></h3>
                </div>
                <div class="price-buy-now">
                  <button class="btn-buy-now" type="button">buy</button>
                  <h3>Â£<%= meal.price %></h3>
                </div>
              </div>
            </div>
          </div>
        </div>      <!-- STARTS HERE -->
      <% end %>
    </div>
  </div>
    <!-- END HERE -->
  <div
    class="map-position" id="map"
    style="width: 30%;
    height: 84vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>


</div>
