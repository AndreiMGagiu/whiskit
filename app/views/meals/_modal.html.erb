<div id="open-modal_<%= meal.id %>" class="modal-window">
  <div>
    <div class="modalbackimage" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url('<%= cl_image_path meal.photo %>')">
    </div>
    <a href="" title="Close" class="modal-close"> X </a>
    <div class="df">
      <div class="food-title">
        <h2><%= meal.name %></h2>
      </div>
      <div class="avatar-meal-card-modal">
        <%= image_tag 'jack.png', class: 'avatar'  %>
        <h3>4.7</h3>
      </div>

    </div>
    <div style="padding: 0 20px;">
      <div class="pick-up-time">
        <h4> portions remaining : <%= meal.portions %> </h4>
      </div>
      <div class="pick-up-time">
        <h4> pick-up time :<%= meal.pick_up_start.strftime("%I:%M%p") %> - <%= meal.pick_up_end %></h4>
      </div>
      <div>
        <h4> suitable for :</h4>
        <ul>
            <% meal.dietary_requirements.each do  |dietary_requirement| %>
            <li><%= dietary_requirement.categories%></li>
          <% end%>
        </ul>
      </div>
      <div class="meal-description">
        <p> <%= meal.description %>  </p>
      </div>
      <div>
        <a href="#"><h4> read reviews of the chef </h4></a>
      </div>
         <%= link_to "buy", new_meal_order_path(meal), class: "btn-buy-now" %>
      <div>
      </div>

    </div>
  </div>
</div>
